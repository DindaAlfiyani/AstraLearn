@{
    ViewData["Title"] = "Admin - Pelatihan";
    Layout = "_Layout";
}

<div class="pagetitle">
    <h1>Data Peserta</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="datatable-wrapper datatable-loading no-footer fixed-columns">
                        <table class="table table-striped table-borderless" style="width:100%" id="dataTable">
                            <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Nama Pengguna</th>
                                    <th scope="col">Nama Pelatihan</th>
                                    <th scope="col">Riwayat Section</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Presentase</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .section {
        min-height: 76vh;
        display: flex;
        flex-direction: column;
    }

    .container-fluid {
        flex: 1;
    }

    .card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        width: 100%; /* Set the width as needed */
        overflow: hidden; /* To prevent table overflow */
    }

    .card-body {
        width: 1450px;
    }

    .table {
        margin-bottom: 0; /* Menghilangkan margin atau gutters di dalam tabel */
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var rootHost = "http://localhost:5180";

        new DataTable('#dataTable', {
            ajax: {
                url: rootHost + '/ViewPeserta/GetAllPeserta',
                type: "GET",
                dataSrc: function (data) {
                    console.log(data.data);
                    return data.data;
                }
            },
            columns: [
                { data: null },
                { data: 'nama_pengguna' },
                { data: 'nama_pelatihan' },
                { data: 'riwayat_section' },
                { data: 'status' },
                {
                    data: 'presentase',
                    render: function (data, type, row) {
                        return data + "%";
                    }
                },
            ],
            columnDefs: [
                {
                    targets: 0,
                    render: function (data, type, row, index) {
                        return index.row + 1;
                    }
                }
            ],
            createdRow: function (row, data, dataIndex) {
                // Add any additional row attributes if needed
            }
        });
    });
</script>
