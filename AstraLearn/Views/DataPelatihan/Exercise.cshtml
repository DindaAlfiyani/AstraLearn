@{
    ViewData["Title"] = "Pelatih - Pelatihan";
    Layout = "_Layout";
}

<div class="pagetitle">
    <h1>Exercise</h1>
    <h4>@(ViewBag.namaSection)</h4>
    <input type="hidden" id="idPelatihan" value="@ViewBag.idSection" />
</div>


<section class="section">
    <div class="container-fluid">
        <button class="btn btn-sm btn-primary mb-3" data-toggle="modal" data-target="#tambah_exercise">
            <i class="fas fa-plus fa-sm"></i>Tambah Exercise
        </button>
        <div class="table-responsive">
            <table class="table table-striped" style="width:100%" id="dataTable">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Soal</th>
                        <th scope="col">Pilihan 1</th>
                        <th scope="col">Pilihan 2</th>
                        <th scope="col">Pilihan 3</th>
                        <th scope="col">Pilihan 4</th>
                        <th scope="col">Pilihan 5</th>
                        <th scope="col">Kunci Jawaban</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

    <!--<!-- Modal -->
    <!-- Add Exercise Modal -->
    <div class="modal fade" id="tambah_exercise" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">FORM TAMBAH EXERCISE</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="myForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label" for="Soal">Soal</label>
                            <textarea id="Soal" name="Soal" class="form-control"></textarea>
                            <span class="text-danger" id="errorSoal"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan1">Pilihan 1</label>
                            <input id="Pilgan1" name="Pilgan1" class="form-control" />
                            <span class="text-danger" id="errorPilgan1"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan2">Pilihan 2</label>
                            <input id="Pilgan2" name="Pilgan2" class="form-control" />
                            <span class="text-danger" id="errorPilgan2"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan3">Pilihan 3</label>
                            <input id="Pilgan3" name="Pilgan3" class="form-control" />
                            <span class="text-danger" id="errorPilgan3"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan4">Pilihan 4</label>
                            <input id="Pilgan4" name="Pilgan4" class="form-control" />
                            <span class="text-danger" id="errorPilgan4"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="Pilgan5">Pilihan 5</label>
                            <input id="Pilgan5" name="Pilgan5" class="form-control" />
                            <span class="text-danger" id="errorPilgan5"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="KunciJawaban">Kunci Jawaban</label>
                            <select id="KunciJawaban" name="KunciJawaban" class="form-control">
                                <option value="pilgan1">Pilihan 1</option>
                                <option value="pilgan2">Pilihan 2</option>
                                <option value="pilgan3">Pilihan 3</option>
                                <option value="pilgan4">Pilihan 4</option>
                                <option value="pilgan5">Pilihan 5</option>
                            </select>
                            <span class="text-danger" id="errorKunciJawaban"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="submit" value="Tambah" id="buttonCreate" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Exercise Modal -->
    <div class="modal fade" id="edit_exercise" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">FORM EDIT EXERCISE</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label" for="EditSoal">Soal</label>
                            <textarea id="EditSoal" name="EditSoal" class="form-control"></textarea>
                            <span class="text-danger" id="errorEditSoal"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="EditPilgan1">Pilihan 1</label>
                            <input id="EditPilgan1" name="EditPilgan1" class="form-control" />
                            <span class="text-danger" id="errorEditPilgan1"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="EditPilgan2">Pilihan 2</label>
                            <input id="EditPilgan2" name="EditPilgan2" class="form-control" />
                            <span class="text-danger" id="errorEditPilgan2"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="EditPilgan3">Pilihan 3</label>
                            <input id="EditPilgan3" name="EditPilgan3" class="form-control" />
                            <span class="text-danger" id="errorEditPilgan3"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="EditPilgan4">Pilihan 4</label>
                            <input id="EditPilgan4" name="EditPilgan4" class="form-control" />
                            <span class="text-danger" id="errorEditPilgan4"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="EditPilgan5">Pilihan 5</label>
                            <input id="EditPilgan5" name="EditPilgan5" class="form-control" />
                            <span class="text-danger" id="errorEditPilgan5"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="EditKunciJawaban">Kunci Jawaban</label>
                            <input id="EditKunciJawaban" name="EditKunciJawaban" class="form-control" />
                            <span class="text-danger" id="errorEditKunciJawaban"></span>
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="submit" value="Ubah" id="buttonUpdate" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .section {
        min-height: 78vh;
        display: flex;
        flex-direction: column;
    }

    .container-fluid {
        flex: 1;
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var rootHost = "http://localhost:5180";
        var exerciseId;
        var IdPelatihan = $("#idPelatihan").val();

        console.log(IdPelatihan);
        new DataTable('#dataTable', {
            ajax: {
                url: rootHost + '/Exercise/GetAllExercises?id=' + IdPelatihan,
                type: "GET",
                dataSrc: function (data) {
                    return data.data;
                }
            },
            columns: [
                { data: null },
                { data: 'soal' },  
                { data: 'pilgan1' },  
                { data: 'pilgan2' }, 
                { data: 'pilgan3' },  
                { data: 'pilgan4' },
                { data: 'pilgan5' },
                { data: 'kunci_jawaban' },
                { data: null },
            ],
            columnDefs: [
                {
                    targets: 0,
                    render: function (data, type, row, index) {
                        return index.row + 1;
                    }
                },
                {
                    targets: 8,
                    render: function (data, type, row, index) {
                        const deleteButton = '<button class="btn btn-sm btn-danger delete-button"><i class="bi bi-trash"></i></button>';
                        const editButton = '<button class="btn btn-primary btn-sm edit-button" data-toggle="modal" data-target="#edit_exercise" data-id="' + row.id_pelatihan + '"><i class="bi bi-exclamation-triangle"></i></button>';
                        return editButton + " " + deleteButton;
                    }
                }
            ],
            createdRow: function (row, data, dataIndex) {
                $(row).attr('data-id', data.id_exercise);
                $(row).attr('data-type', 'pelatihan');
            }
        });

        function tambahExercise() {
            var soal = $("#Soal").val();
            var pilgan1 = $("#Pilgan1").val();
            var pilgan2 = $("#Pilgan2").val();
            var pilgan3 = $("#Pilgan3").val();
            var pilgan4 = $("#Pilgan4").val();
            var pilgan5 = $("#Pilgan5").val();
            var kunciJawaban;

            if ($("#KunciJawaban").val() === "pilgan1") {
                kunciJawaban = pilgan1;
            } else if ($("#KunciJawaban").val() === "pilgan2") {
                kunciJawaban = pilgan2;
            } else if ($("#KunciJawaban").val() === "pilgan3") {
                kunciJawaban = pilgan3;
            } else if ($("#KunciJawaban").val() === "pilgan4") {
                kunciJawaban = pilgan4;
            } else if ($("#KunciJawaban").val() === "pilgan5") {
                kunciJawaban = pilgan5;
            } else {
                $("#errorKunciJawaban").text("Pilih kunci jawaban.");
                return;
            }

            if (!soal.trim()) {
                $("#errorSoal").text("Soal tidak boleh kosong.");
                return;
            } else {
                $("#errorSoal").text("");
            }

            if (!pilgan1.trim()) {
                $("#errorPilgan1").text("Pilihan 1 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan1").text("");
            }

            if (!pilgan2.trim()) {
                $("#errorPilgan2").text("Pilihan 2 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan2").text("");
            }

            if (!pilgan3.trim()) {
                $("#errorPilgan3").text("Pilihan 3 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan3").text("");
            }

            if (!pilgan4.trim()) {
                $("#errorPilgan4").text("Pilihan 4 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan4").text("");
            }

            if (!pilgan5.trim()) {
                $("#errorPilgan5").text("Pilihan 5 tidak boleh kosong.");
                return;
            } else {
                $("#errorPilgan5").text("");
            }

            if (!kunciJawaban.trim()) {
                $("#errorKunciJawaban").text("Kunci Jawaban harus dipilih.");
                return;
            } else {
                $("#errorKunciJawaban").text("");
            }

            var data = {
                id_exercise: 0,
                id_section: IdPelatihan,
                soal: soal,
                pilgan1: pilgan1,
                pilgan2: pilgan2,
                pilgan3: pilgan3,
                pilgan4: pilgan4,
                pilgan5: pilgan5,
                kunci_jawaban: kunciJawaban
            };
            console.log(data);
            $.ajax({
                url: rootHost + '/Exercise/InsertExercise', 
                method: "post",
                data: JSON.stringify(data),
                contentType: "application/json",
                success: function (data) {
                    notifikasiTambahSukses();
                },
                error: function () {
                }
            });
        }


        $("#myForm").submit(function (e) {
            e.preventDefault();
            tambahExercise();
        });


        $(document).on("click", ".delete-button", function () {
            exerciseId = $(this).closest('tr').data("id");

            Swal.fire({
                title: "Hapus Exercise?",
                text: "Apakah anda ingin menghapus exercise ini?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Ya",
                cancelButtonText: "Tidak"
            }).then((result) => {
                if (result.isConfirmed) {
                    hapusExercise();
                }
            });
        });
        
        function hapusExercise() {
            $.ajax({
                url: rootHost + '/Exercise/DeleteExercise?id=' + exerciseId,
                type: "POST",
                success: function (data) {
                    notifikasiHapusSukses();
                },
                error: function () {
                    Swal.fire("Error!", "Terjadi kesalahan.", "error");
                }
            });
        }

        $('#dataTable').on('click', 'button.edit-button', function () {
            pelatihanId = $(this).data('id');
            $.ajax({
                url: rootHost + '/Pelatihan/GetPelatihan?id=' + pelatihanId,
                type: 'GET',
                success: function (response) {
                    if (response && response.data) {
                        var data = response.data;

                        $('#edit_klasifikasi').modal('show');
                        $('#EditNamaPelatihan').val(data.nama_pelatihan);
                        $('#EditDeskripsiPelatihan').val(data.deskripsi_pelatihan);
                        loadKlasifikasi2(data.id_klasifikasi);
                    } else {
                        console.error("Invalid response format:", response);
                        Swal.fire('Error!', 'Terjadi kesalahan dalam format respons.', 'error');
                    }
                },

                error: function () {
                    Swal.fire('Error!', 'Terjadi kesalahan.', 'error');
                }
            });
        });

        function loadKlasifikasi2(a) {
            $.ajax({
                url: rootHost + '/KlasifikasiPelatihan/GetAllKlasifikasiPelatihan',
                method: 'get',
                contentType: 'application/json',
                success: function (response) {
                    if (response.status === 200 && response.data) {
                        var klasifikasiData = response.data;

                        // Clear existing options in the dropdown
                        $('#EditKlasifikasiPelatihan').empty();

                        // Append options to the dropdown
                        klasifikasiData.forEach(function (item) {
                            var option = $('<option>', {
                                value: item.id_klasifikasi,
                                text: item.nama_klasifikasi
                            });

                            // Set the selected attribute for the matching ID
                            if (item.id_klasifikasi === a) {
                                option.attr('selected', 'selected');
                            }

                            $('#EditKlasifikasiPelatihan').append(option);
                        });
                    } else {
                        console.error("Invalid response format:", response);
                    }
                },
                error: function () {
                    console.error("Failed to load classification data.");
                }
            });
        }

        function ubahKlasifikasi() {
            var namaPelatihan = $("#EditNamaPelatihan").val();
            var deskripsiPelatihan = $("#EditDeskripsiPelatihan").val();
            var klasifikasiPelatihan = $("#EditKlasifikasiPelatihan").val();
            if (!namaPelatihan.trim()) {
                $("#errorEditNamaPelatihan").text("Nama Pelatihan tidak boleh kosong.");
                return;
            } else {
                $("#errorEditNamaPelatihan").text("");
            }

            if (!deskripsiPelatihan.trim()) {
                $("#errorEditDeskripsiPelatihan").text("Deskripsi Pelatihan tidak boleh kosong.");
                return;
            } else {
                $("#errorEditDeskripsiPelatihan").text("");
            }

            var data = {
                id_pelatihan: pelatihanId,
                id_pengguna: 1,
                id_klasifikasi: klasifikasiPelatihan,
                nama_pelatihan: namaPelatihan,
                deskripsi_pelatihan: deskripsiPelatihan,
                jumlah_pelatihan: 0,
                nama_klasifikasi: namaPelatihan
            };

            console.log(data);

            $.ajax({
                url: rootHost + '/Pelatihan/UpdatePelatihan',
                method: "post",
                data: JSON.stringify(data),
                contentType: "application/json",
                success: function (data) {
                    notifikasiUpdateSukses();
                },
                error: function () {

                }
            });
        }

        $("#editForm").submit(function (e) {
            e.preventDefault();
            ubahKlasifikasi();
        });


        function notifikasiTambahSukses() {
            Swal.fire({
                title: "Sukses!",
                text: "Data Exercise berhasil ditambahkan.",
                icon: "success",
                confirmButtonColor: "#3085d6",
                confirmButtonText: "OK"
            }).then(() => {
                location.reload();
            });
        }

        function notifikasiUpdateSukses() {
            Swal.fire({
                title: "Sukses!",
                text: "Data Klasifikasi Pelatihan berhasil diubah.",
                icon: "success",
                confirmButtonColor: "#3085d6",
                confirmButtonText: "OK"
            }).then(() => {
                location.reload();
            });
        }

        function notifikasiHapusSukses() {
            Swal.fire({
                title: "Sukses!",
                text: "Data Klasifikasi Pelatihan berhasil dihapus.",
                icon: "success",
                confirmButtonColor: "#3085d6",
                confirmButtonText: "OK"
            }).then(() => {
                location.reload();
            });
        }

        $('#edit_klasifikasi .close').on('click', function () {
            $('#edit_klasifikasi').modal('hide');
        });
    });
</script>
